{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "sourceMap": true,
        "outDir": "./lib",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "Bundler",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": "./"
    },
    "include": ["src"]
}
